---
import Layout from '../layouts/Layout.astro';
import HeroClara from '../components/HeroClara.astro';
import ProgramNotesClara from '../components/ProgramNotesClara.astro';
import MakingOffClara from '../components/MakingOffClara.astro';
import LetersClara from '../components/letersClara.astro';
import News from '../components/News.astro';
---

<Layout title="Luna Clara" image="https://www.historiasdeunaluna.es/img/coverlunaclara.jpg" description='Monográfico de 21 canciones de Jesús García Leoz interpretadas por Mar Morán y Aurelio Viribay con el objetivo de seguir recuperando la canción Española' shortDescription='Monográfico de 21 caciones de Jesus García Leoz interpetadas por Mar Morán y Aurelio viribay' route="lunaclara">
	<main class="luna-clara">
		<HeroClara />
		<iframe style="border-radius:12px" src="https://open.spotify.com/embed/album/0lRQXLzG8iJ8rt6E4PEasU?utm_source=generator" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
		<MakingOffClara />
		<News />
		<ProgramNotesClara />
		<LetersClara />
	</main>
</Layout>
<style>
	.luna-clara{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		margin-top: 80px;
	}
	iframe{
		max-width: 1200px;
		margin: 1rem;
	}
</style>