---
import Layout from '../layouts/Layout.astro';
import HeroClara from '../components/HeroClara.astro';
import ProgramNotesClara from '../components/ProgramNotesClara.astro';
import MakingOffClara from '../components/MakingOffClara.astro';
import LetersClara from '../components/letersClara.astro';
import News from '../components/News.astro';
---

<Layout title="Luna Clara" image="https://www.historiasdeunaluna.es/img/lunaclarainstagram.png" 
	description='La soprano Mar Morán y el pianista Aurelio Viribay, abordan la integral de las canciones de Jesús García Leoz (1904 - 1953).'
	shortDescription='Integral de canciones de Jesús García Leoz.'
	route="lunaclara">
	<main class="luna-clara">
		<HeroClara />
		<iframe name="lunaclaraSpotify" style="border-radius:12px" src="https://open.spotify.com/embed/album/0lRQXLzG8iJ8rt6E4PEasU?utm_source=generator" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
		<MakingOffClara />
		<News />
		<ProgramNotesClara />
		<LetersClara />
	</main>
</Layout>
<style>
	.luna-clara{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		margin-top: 80px;
		margin: 0 5rem;
	}
	iframe{
		max-width: 1200px;
		margin: 1rem;
	}
</style>