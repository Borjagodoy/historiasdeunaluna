---
import Header from '../components/Header.astro';
interface Props {
	title: string;
	description: string;
	shortDescription: string;
	route: string;
	image: string
}

const { title, description, shortDescription, route, image } = Astro.props;
const completeTitle = `${title} - ${shortDescription} - Mar Morán & Aurelio Viribay`;
const url = `https://www.historiasdeunaluna.es${route}`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>{title} - {shortDescription} - Mar Morán & Aurelio Viribay</title>
		<meta name="title" content={completeTitle}>
		<meta name="description" content={description}>
		<meta name="keywords" content="Manuel Palau, Mar Morán, Aurelio Viribay, Canción Española, Spanish Songs, Soprano, Pianista, musica Clásica, Clasical Music, Disco, canción">
		<meta name="robots" content="index, follow">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<meta name="language" content="Spanish">
		<meta name="author" content="Gomar producciones">
		<meta itemprop="name" content={completeTitle}>
		<meta itemprop="description" content={description}>
		<meta name="image" content={image}>
	
		<!-- Twitter -->
		<meta name="twitter:card" content="summary">
		<meta name="twitter:title" content={completeTitle}>
		<meta name="twitter:description" content={description}>
		<meta name="twitter:image:src" content={image}>
	
		<!-- Open Graph general (Facebook, Pinterest & Google+) -->
		<meta name="og:title" content={completeTitle}>
		<meta name="og:description" content={description}>
		<meta name="og:url" content={url}>
		<meta name="og:site_name" content={description}>
		<meta name="og:locale" content="es_ES">
		<meta name="og:type" content="website">
		<link rel="shortcut icon" href="./favicon.ico" type="image/x-icon">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500&display=swap" rel="stylesheet">
		<!-- Google tag (gtag.js) -->
		<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-9PX7EQV1XV"></script>
		<script is:inline>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-9PX7EQV1XV');
		</script>
	</head>
	<body>
		<Header page={route} />
		<slot />
	</body>
</html>
<style is:global>
	h1, h2, h3, h4, h5, h6, p{
		margin: 5px;
		padding: 0;
	}
	.justify {
		text-align: justify;
	}
	section {
		padding: 5rem 2rem;
	}
	.content-center{
		display: flex;
		justify-content: center;
	}
	.title{
		font-size: var(--font-size-4);
		font-weight: 200;
		color: #fff;
	}
	.subtitle{
		font-size: 16px;
		padding: 10px;
	}
	.container {
		max-width: 1200px;
	}
	.link{
		text-decoration: none;
		color: #fff;
	}
	.link:hover{
		color: var(--light-color);
	}
	html{
		--main-color: #1B262C;
		--secondary-color: #0F4C75;
		--tertiary-color: #3282B8;
		--light-color: #bbbbbb;
		--dark-color: #010103;
		
		/* fontSizes variables */
		--font-size-1: 1.2rem;
		--font-size-2: 1.4rem;
		--font-size-3: 1.6rem;
		--font-size-4: 1.8rem;
		--font-size-5: 2rem;
		--font-size-6: 2.2rem;
		/* margins variables */
		--margin-1: 0.5rem;
		--margin-2: 1rem;
		--margin-3: 1.5rem;
		--margin-4: 2rem;
		--margin-5: 2.5rem;
		--margin-6: 3rem;
		/* paddings variables */
		--padding-1: 0.5rem;
		--padding-2: 1rem;
		--padding-3: 1.5rem;
		--padding-4: 2rem;
		--padding-5: 2.5rem;
		--padding-6: 3rem;
		/* spaces variables */
		--space-1: 0.5rem;
		--space-2: 1rem;
		--space-3: 1.5rem;
		--space-4: 2rem;
		--space-5: 2.5rem;
		--space-6: 3rem;
		background-color: var(--dark-color);
		scroll-behavior: smooth;
		font-size: 16px;
	}
	html, body{
		font-family: 'Montserrat', sans-serif;
		font-size: 16px;
		color: var(--light-color);
		margin: 0;
		padding: 0;
	}
	@media screen and (max-width: 550px) {
    section{
        padding: 1rem;
    }
}
</style>
